<style>
	.calendar-section {
		background: var(--light-gray);
	}

	.calendar-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.calendar-wrapper {
		background: white;
		border-radius: 20px;
		box-shadow: var(--shadow);
		overflow: hidden;
	}

	.calendar-header {
		padding: 30px;
		background: linear-gradient(135deg, var(--forest-green), var(--moss-green));
		color: white;
	}

	.calendar-info h3 {
		display: flex;
		align-items: center;
		gap: 12px;
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 0;
		color: white;
	}

	.calendar-info h3 svg {
		color: var(--warm-beige);
		stroke-width: 2;
	}

	.calendar-iframe-container {
		position: relative;
		width: 100%;
		height: 600px;
		overflow: hidden;
	}

	.calendar-iframe-container iframe {
		width: 100%;
		height: 100%;
		border: none;
		display: block;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.calendar-header {
			padding: 25px 20px;
		}

		.calendar-info h3 {
			font-size: 1.3rem;
			flex-direction: column;
			text-align: center;
			gap: 8px;
		}

		.calendar-iframe-container {
			height: 500px;
		}
	}

	@media (max-width: 480px) {
		.calendar-header {
			padding: 20px 15px;
		}

		.calendar-info h3 {
			font-size: 1.2rem;
		}

		.calendar-iframe-container {
			height: 450px;
		}
	}

	/* Extra small mobile */
	@media (max-width: 360px) {
		.calendar-iframe-container {
			height: 400px;
		}
	}
</style>