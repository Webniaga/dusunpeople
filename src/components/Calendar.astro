<style>
	.calendar-section {
		background: var(--light-gray);
	}

	.calendar-container {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 350px;
		gap: 40px;
		align-items: start;
	}

	.calendar-wrapper {
		background: white;
		border-radius: 20px;
		box-shadow: var(--shadow);
		overflow: hidden;
	}

	.calendar-header {
		padding: 30px;
		background: linear-gradient(135deg, var(--forest-green), var(--moss-green));
		color: white;
	}

	.calendar-info h3 {
		display: flex;
		align-items: center;
		gap: 12px;
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 12px;
		color: white;
	}

	.calendar-info h3 svg {
		color: var(--warm-beige);
		stroke-width: 2;
	}

	.calendar-info p {
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		font-size: 1rem;
	}

	.calendar-iframe-container {
		position: relative;
		width: 100%;
		height: 600px;
		overflow: hidden;
	}

	.calendar-iframe-container iframe {
		width: 100%;
		height: 100%;
		border: none;
		display: block;
	}

	.calendar-legend {
		padding: 25px 30px;
		background: var(--warm-beige);
		border-top: 1px solid #e0e0e0;
	}

	.calendar-legend h4 {
		font-size: 1.1rem;
		color: var(--forest-green);
		margin-bottom: 15px;
		font-weight: 600;
	}

	.legend-items {
		display: flex;
		flex-wrap: wrap;
		gap: 20px;
	}

	.legend-item {
		display: flex;
		align-items: center;
		gap: 8px;
		font-size: 0.9rem;
		color: var(--deep-brown);
	}

	.legend-color {
		width: 16px;
		height: 16px;
		border-radius: 4px;
		border: 1px solid #ccc;
	}

	.legend-color.booked {
		background: #c0ca33;
	}

	.legend-color.available {
		background: #f8f9fa;
	}

	.legend-color.holiday {
		background: #0b8043;
	}

	.booking-reminder {
		position: sticky;
		top: 100px;
	}

	.reminder-card {
		background: white;
		padding: 30px;
		border-radius: 20px;
		box-shadow: var(--shadow);
		text-align: center;
		border: 2px solid var(--moss-green);
	}

	.reminder-icon {
		display: flex;
		justify-content: center;
		margin-bottom: 20px;
	}

	.reminder-icon svg {
		color: var(--moss-green);
		background: rgba(85, 107, 47, 0.1);
		padding: 12px;
		border-radius: 50%;
		width: 56px;
		height: 56px;
	}

	.reminder-content h4 {
		font-size: 1.3rem;
		color: var(--forest-green);
		margin-bottom: 15px;
		font-weight: 600;
	}

	.reminder-content p {
		color: var(--deep-brown);
		line-height: 1.6;
		margin-bottom: 25px;
		font-size: 1rem;
	}

	.reminder-content .btn {
		width: 100%;
		justify-content: center;
		font-size: 1rem;
		padding: 15px 20px;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.calendar-container {
			grid-template-columns: 1fr;
			gap: 30px;
		}

		.booking-reminder {
			position: static;
		}

		.reminder-card {
			max-width: 500px;
			margin: 0 auto;
		}
	}

	@media (max-width: 768px) {
		.calendar-header {
			padding: 25px 20px;
		}

		.calendar-info h3 {
			font-size: 1.3rem;
			flex-direction: column;
			text-align: center;
			gap: 8px;
		}

		.calendar-info p {
			font-size: 0.95rem;
			text-align: center;
		}

		.calendar-iframe-container {
			height: 500px;
		}

		.calendar-legend {
			padding: 20px;
		}

		.legend-items {
			flex-direction: column;
			gap: 12px;
		}

		.reminder-card {
			padding: 25px 20px;
		}

		.reminder-content h4 {
			font-size: 1.2rem;
		}

		.reminder-content p {
			font-size: 0.95rem;
		}
	}

	@media (max-width: 480px) {
		.calendar-header {
			padding: 20px 15px;
		}

		.calendar-info h3 {
			font-size: 1.2rem;
		}

		.calendar-info p {
			font-size: 0.9rem;
		}

		.calendar-iframe-container {
			height: 450px;
		}

		.calendar-legend {
			padding: 15px;
		}

		.calendar-legend h4 {
			font-size: 1rem;
		}

		.legend-item {
			font-size: 0.85rem;
		}

		.legend-color {
			width: 14px;
			height: 14px;
		}

		.reminder-card {
			padding: 20px 15px;
		}

		.reminder-icon svg {
			width: 48px;
			height: 48px;
			padding: 10px;
		}

		.reminder-content h4 {
			font-size: 1.1rem;
		}

		.reminder-content p {
			font-size: 0.9rem;
		}

		.reminder-content .btn {
			font-size: 0.95rem;
			padding: 12px 16px;
		}
	}

	/* Extra small mobile */
	@media (max-width: 360px) {
		.calendar-iframe-container {
			height: 400px;
		}

		.reminder-card {
			padding: 15px;
		}
	}
</style>