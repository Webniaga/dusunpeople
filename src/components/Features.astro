<style>
	.features-section {
		background: var(--light-gray);
	}

	.features-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 30px;
		max-width: 1000px;
		margin: 0 auto;
	}

	.feature-card {
		background: white;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: var(--shadow);
		transition: all 0.3s ease;
		border: 1px solid transparent;
	}

	.feature-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 15px 40px rgba(47, 79, 79, 0.15);
		border-color: var(--moss-green);
	}

	.feature-image {
		width: 100%;
		height: 220px;
		object-fit: cover;
		object-position: center;
		transition: transform 0.3s ease;
	}

	.feature-card:hover .feature-image {
		transform: scale(1.05);
	}

	.feature-content {
		padding: 25px;
		text-align: center;
	}

	.feature-card h3 {
		font-size: 1.4rem;
		color: var(--forest-green);
		margin-bottom: 15px;
		font-weight: 600;
	}

	.feature-card p {
		color: var(--deep-brown);
		line-height: 1.6;
		opacity: 0.8;
		font-size: 1rem;
	}

	@media (max-width: 968px) {
		.features-grid {
			grid-template-columns: 1fr;
			gap: 25px;
		}
		
		.feature-image {
			height: 200px;
		}
		
		.feature-content {
			padding: 20px;
		}
		
		.feature-card h3 {
			font-size: 1.3rem;
		}
	}

	@media (max-width: 768px) {
		.feature-image {
			height: 180px;
		}
		
		.feature-content {
			padding: 20px;
		}
		
		.feature-card h3 {
			font-size: 1.2rem;
			margin-bottom: 12px;
		}
		
		.feature-card p {
			font-size: 0.95rem;
		}
	}

	@media (max-width: 480px) {
		.feature-image {
			height: 160px;
		}
		
		.feature-content {
			padding: 15px;
		}
		
		.feature-card h3 {
			font-size: 1.1rem;
		}
		
		.feature-card p {
			font-size: 0.9rem;
		}
	}
</style>