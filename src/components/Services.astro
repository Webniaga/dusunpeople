<style>
	.services-section {
		background: var(--cream);
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 30px;
		margin-bottom: 4rem;
	}

	.service-card {
		background: white;
		padding: 30px;
		border-radius: 20px;
		box-shadow: var(--shadow);
		text-align: center;
		transition: all 0.3s ease;
		position: relative;
		border: 1px solid transparent;
	}

	.service-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 15px 40px rgba(47, 79, 79, 0.15);
		border-color: var(--moss-green);
	}

	.service-card.featured {
		border: 2px solid var(--moss-green);
		background: linear-gradient(135deg, #f0f8f0, #e8f5e8);
	}

	.service-badge {
		position: absolute;
		top: 15px;
		right: 15px;
		background: var(--moss-green);
		color: white;
		padding: 5px 15px;
		border-radius: 20px;
		font-size: 0.8rem;
		font-weight: 500;
	}

	.service-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 80px;
		height: 80px;
		background: var(--moss-green);
		border-radius: 50%;
		margin: 0 auto 20px;
		color: white;
		transition: all 0.3s ease;
		box-shadow: 0 8px 25px rgba(85, 107, 47, 0.3);
	}

	.service-card:hover .service-icon {
		background: var(--forest-green);
		transform: scale(1.1);
		box-shadow: 0 12px 35px rgba(85, 107, 47, 0.4);
	}

	.service-card h3 {
		font-size: 1.4rem;
		color: var(--forest-green);
		margin-bottom: 15px;
		font-weight: 600;
	}

	.service-card p {
		color: var(--deep-brown);
		line-height: 1.7;
		margin-bottom: 20px;
		font-size: 1rem;
	}

	.service-features {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		justify-content: center;
		margin-top: 20px;
	}

	.feature-tag {
		background: var(--warm-beige);
		color: var(--forest-green);
		padding: 6px 12px;
		border-radius: 15px;
		font-size: 0.85rem;
		font-weight: 500;
		border: 1px solid rgba(85, 107, 47, 0.2);
	}

	.service-contact {
		background: white;
		padding: 20px;
		border-radius: 15px;
		margin: 20px 0;
		border: 2px solid var(--moss-green);
		text-align: left;
	}

	.service-contact h4 {
		color: var(--forest-green);
		margin-bottom: 10px;
		font-size: 1.1rem;
		text-align: center;
	}

	.contact-link {
		display: block;
		color: var(--moss-green);
		text-decoration: none;
		font-size: 1.1rem;
		margin-bottom: 10px;
		text-align: center;
		transition: color 0.3s ease;
	}

	.contact-link:hover {
		color: var(--forest-green);
		text-decoration: underline;
	}

	.contact-note {
		font-size: 0.9rem;
		color: var(--deep-brown);
		font-style: italic;
		text-align: center;
		margin: 0;
		background: rgba(85, 107, 47, 0.1);
		padding: 10px;
		border-radius: 8px;
	}

	/* Additional Services */
