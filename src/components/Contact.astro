<style>
	.contact-content {
		display: grid;
		grid-template-columns: 1fr;
		gap: 30px;
		max-width: 1000px;
		margin: 0 auto;
	}

	.contact-info {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 25px;
	}

	.contact-card {
		background: linear-gradient(135deg, #f0f8f0, #e8f5e8);
		padding: 30px;
		border-radius: 20px;
		box-shadow: var(--shadow);
		text-align: center;
		transition: all 0.3s ease;
		border: 1px solid rgba(85, 107, 47, 0.1);
	}

	.contact-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 35px rgba(85, 107, 47, 0.15);
	}

	.contact-icon-wrapper {
		display: flex;
		justify-content: center;
		margin-bottom: 20px;
	}

	.contact-icon {
		width: 64px;
		height: 64px;
		background: var(--moss-green);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 8px 25px rgba(85, 107, 47, 0.3);
		transition: all 0.3s ease;
	}

	.contact-card:hover .contact-icon {
		transform: scale(1.1);
		box-shadow: 0 12px 35px rgba(85, 107, 47, 0.4);
	}

	.icon-svg {
		width: 32px;
		height: 32px;
		color: white;
		stroke-width: 2;
	}

	.contact-card h3 {
		font-size: 1.3rem;
		color: var(--forest-green);
		margin-bottom: 10px;
		font-weight: 600;
	}

	.contact-card p {
		color: var(--deep-brown);
		margin-bottom: 15px;
		line-height: 1.6;
	}

	/* Social Card Specific Styles */
	.social-card {
		background: linear-gradient(135deg, #f8f0ff, #f0f8ff);
		border: 1px solid rgba(85, 107, 47, 0.2);
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 15px;
		margin-top: 15px;
	}

	.social-btn {
		display: flex;
		align-items: center;
		gap: 8px;
		padding: 12px 20px;
		border-radius: 25px;
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
	}

	.tiktok-btn {
		background: linear-gradient(135deg, #ff0050, #ff4081);
		color: white;
	}

	.tiktok-btn:hover {
		background: linear-gradient(135deg, #e6004a, #e6396f);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(255, 0, 80, 0.3);
	}

	.tiktok-btn i {
		font-size: 18px;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.contact-content {
			gap: 25px;
		}
		
		.contact-info {
			grid-template-columns: 1fr;
		}
		
		.contact-card {
			padding: 25px;
		}
		
		.contact-icon {
			width: 56px;
			height: 56px;
		}
		
		.icon-svg {
			width: 28px;
			height: 28px;
		}

		.social-links {
			flex-direction: column;
			align-items: center;
		}

		.social-btn {
			width: 100%;
			max-width: 200px;
			justify-content: center;
		}
	}

	@media (max-width: 480px) {
		.contact-card {
