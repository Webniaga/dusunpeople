<script>
	// Slideshow functionality
	let slideIndices = {
		slideshow1: 1,
		slideshow2: 1,
		slideshow3: 1
	};

	// Auto-play slideshows
	function autoSlide() {
		Object.keys(slideIndices).forEach(slideshowId => {
			changeSlide(slideshowId, 1);
		});
	}

	// Set auto-play interval (5 seconds)
	setInterval(autoSlide, 5000);

	function changeSlide(slideshowId, direction) {
		const slideshow = document.getElementById(slideshowId);
		const slides = slideshow.querySelectorAll('.slide');
		const indicators = slideshow.querySelectorAll('.indicator');
		
		// Hide current slide
		slides[slideIndices[slideshowId] - 1].classList.remove('active');
		indicators[slideIndices[slideshowId] - 1].classList.remove('active');
		
		// Update index
		slideIndices[slideshowId] += direction;
		
		if (slideIndices[slideshowId] > slides.length) {
			slideIndices[slideshowId] = 1;
		}
		if (slideIndices[slideshowId] < 1) {
			slideIndices[slideshowId] = slides.length;
		}
		
		// Show new slide
		slides[slideIndices[slideshowId] - 1].classList.add('active');
		indicators[slideIndices[slideshowId] - 1].classList.add('active');
	}

	function currentSlide(slideshowId, slideNumber) {
		const slideshow = document.getElementById(slideshowId);
		const slides = slideshow.querySelectorAll('.slide');
		const indicators = slideshow.querySelectorAll('.indicator');
		
		// Hide current slide
		slides[slideIndices[slideshowId] - 1].classList.remove('active');
		indicators[slideIndices[slideshowId] - 1].classList.remove('active');
		
		// Set new slide
		slideIndices[slideshowId] = slideNumber;
		slides[slideIndices[slideshowId] - 1].classList.add('active');
		indicators[slideIndices[slideshowId] - 1].classList.add('active');
	}

	// Lightbox functionality
	document.addEventListener('DOMContentLoaded', function() {
		// Add event listeners for slideshow navigation buttons
		const slideButtons = document.querySelectorAll('.slide-btn');
		slideButtons.forEach(button => {
			button.addEventListener('click', function() {
				const slideshowId = this.getAttribute('data-slideshow');
				const direction = parseInt(this.getAttribute('data-direction'));
				changeSlide(slideshowId, direction);
			});
		});

		// Add event listeners for slideshow indicators
		const indicators = document.querySelectorAll('.indicator');
		indicators.forEach(indicator => {
			indicator.addEventListener('click', function() {
				const slideshowId = this.getAttribute('data-slideshow');
				const slideNumber = parseInt(this.getAttribute('data-slide'));
				currentSlide(slideshowId, slideNumber);
			});
		});

		const galleryItems = document.querySelectorAll('.gallery-item[data-lightbox], .slide[data-lightbox]');
		const lightbox = document.getElementById('lightbox');
		const lightboxImage = document.getElementById('lightbox-image');
		const lightboxClose = document.querySelector('.lightbox-close');
		const lightboxPrev = document.getElementById('lightbox-prev');
		const lightboxNext = document.getElementById('lightbox-next');
		const lightboxCurrent = document.getElementById('lightbox-current');
		const lightboxTotal = document.getElementById('lightbox-total');
		
		let currentImageIndex = 0;
		let currentGalleryGroup = 'gallery';
		let currentImages = [];
		
		// Group images by lightbox group
		const imageGroups = {
			gallery: [],
			'zanina-zhufairah': [],
			zafirah: [],
			zafiqha: []
		};
		
		galleryItems.forEach((item, index) => {
			const img = item.querySelector('.gallery-image, .slide-image');
			const group = item.getAttribute('data-lightbox');
			
			if (img && group) {
				imageGroups[group].push({
					src: img.src,
					alt: img.alt,
					element: item
				});
			}
		});
		
		// Open lightbox
		galleryItems.forEach((item) => {
			item.addEventListener('click', function() {
				const group = this.getAttribute('data-lightbox');
				const img = this.querySelector('.gallery-image, .slide-image');
				
				if (img && group) {
					currentGalleryGroup = group;
					currentImages = imageGroups[group];
					currentImageIndex = currentImages.findIndex(image => image.src === img.src);
					
					if (currentImageIndex === -1) currentImageIndex = 0;
					
					openLightbox();
				}
			});
		});
		
		// Close lightbox
		lightboxClose.addEventListener('click', closeLightbox);
		lightbox.addEventListener('click', function(e) {
			if (e.target === lightbox) {
				closeLightbox();
			}
		});
		
		// Navigation
		lightboxPrev.addEventListener('click', function() {
			currentImageIndex = (currentImageIndex - 1 + currentImages.length) % currentImages.length;
			updateLightboxImage();
		});
		
		lightboxNext.addEventListener('click', function() {
			currentImageIndex = (currentImageIndex + 1) % currentImages.length;
			updateLightboxImage();
		});
		
		// Keyboard navigation
		document.addEventListener('keydown', function(e) {
			if (lightbox.classList.contains('active')) {
				if (e.key === 'Escape') {
					closeLightbox();
				} else if (e.key === 'ArrowLeft') {
					lightboxPrev.click();
				} else if (e.key === 'ArrowRight') {
					lightboxNext.click();
				}
			}
		});
		
		function openLightbox() {
			lightbox.classList.add('active');
			document.body.style.overflow = 'hidden';
			updateLightboxImage();
		}
		
		function closeLightbox() {
			lightbox.classList.remove('active');
			document.body.style.overflow = '';
		}
		
		function updateLightboxImage() {
			if (currentImages.length > 0) {
				const currentImage = currentImages[currentImageIndex];
				lightboxImage.src = currentImage.src;
				lightboxImage.alt = currentImage.alt;
				lightboxCurrent.textContent = currentImageIndex + 1;
				lightboxTotal.textContent = currentImages.length;
			}
		}
	});
</script>

